{{ template "base" . }}

{{ define "main" }}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>My Page</h1>
            <p>
                <a href="/logout" class="btn btn-primary">Logout</a>
            </p>
            <p>
                <a href="/post/create" class="btn btn-primary">Create Post</a>
            </p>
            <h2>Users:</h2>
            {{ range .Users }}
                <p>Name: {{ .Username }}</p>
                <p>Email: {{ .Email }}</p>
                <p>Posts: {{ .Posts }}</p>
            {{ end }}
        </div>
    </div>
</div>

{{ end }}