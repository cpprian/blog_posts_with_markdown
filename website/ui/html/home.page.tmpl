{{ template "base" . }}

{{ define "main" }}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>My Page</h1>
            <p>
                <a href="/logout" class="btn btn-primary">Logout</a>
            </p>
            <p>
                <a href="/post/create" class="btn btn-primary">Create Post</a>
            </p>
            {{ range .Posts }}
                <div class="col-md-6">
                    <a href="/" >
                        <h2>{{ .Title }} - {{ .CreatedAt }}</h2>
                    </a></br>
                </div>
                {{ .Content }}
            {{ end }}
        </div>
    </div>
</div>

{{ end }}